#!/usr/bin/env perl
use warnings;
use strict;

use File::Find qw(find finddepth);
use Getopt::Long;
use FindBin;

use lib "${FindBin::Bin}/../lib";
use My::Cleanup::HardLinks::Fast;

our $force    = 0;
our $verbose  = 0;
our $progress = 0;
our $sort     = 0;
Getopt::Long::Configure(qw(gnu_getopt no_ignore_case));
Getopt::Long::GetOptions(
    'f|force' => \$force,
    'v|verbose+' => \$verbose,
    'p|progress' => \$progress,
    's|sort'     => \$sort,
) or die(":-(\n");

my $cleanup = My::Cleanup::HardLinks::Fast->new(force => $force,
                                                verbose => $verbose,
                                                progress => $progress);
$cleanup->run(@ARGV);
