#!/usr/bin/env bash
set -o errexit
set -o pipefail
set -o nounset
shopt -s lastpipe
declare -a findcmd
findcmd=(find)
while (( $# )) ; do
    case "$1" in
        -H) findcmd+=(-H); shift;;
        -L) findcmd+=(-L); shift;;
        -P) findcmd+=(-P); shift;;
        -O) findcmd+=(-O); shift;
            if (( !$# )) ; then >&2 echo "required argument missing: -O" ; exit 1 ; fi
            findcmd+=("$1"); shift;;
        -D) findcmd+=(-D); shift;
            if (( !$# )) ; then >&2 echo "required argument missing: -D" ; exit 1 ; fi
            findcmd+=("$1"); shift;;
        -O*) findcmd+=("$1"); shift;;
        -D*) findcmd+=("$1"); shift;;
        *)  break;;
    esac
done
nodirs=1
while (( $# )) ; do
    case "$1" in
        -*)  break;;            # rest of args start an expression
        '(') break;;            # ditto
        '!') break;;            # ditto
        *)   nodirs=0; findcmd+=("$1"); shift;;
    esac
done
if (( nodirs )) ; then
    findcmd+=(.)
fi
exec "${findcmd[@]}" -type f "$@" -printf 'v1 %D %i %s %Ts %p\n'
